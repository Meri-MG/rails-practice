<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
      <tr>
      <td><%= article.user.username %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article), method: :edit %></td>
        <td><%= button_to 'Delete', article_path(article), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this article?" }} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new article', new_article_path %></p>
<%= link_to 'Return to bloggers\' listing', users_path(@user) %>

<%= link_to 'Home', root_path %>
