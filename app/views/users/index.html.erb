<h1>Our Bloggers</h1>

<% @users.each do |user| %>
  <div><%= user.username %></div>
  <div><%= link_to 'Show', user_path(user) %></div>
  <div><%= link_to 'Edit', edit_user_path(user), method: :edit %></div>
  <div><%= button_to 'Delete', user_path(user), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this article?" }} %></div>
<% end %>